{{ 'component--sidebar.css' | asset_url | stylesheet_tag }}

<section class="sidebar">

    <div class="upper">

        <a href="/">
            {% render 'icon--alien' %}
        </a>

        <ul>
            <li>
                <h3>Categories</h3>
            </li>
            {% for l in linklists.collections.links %}
    
                <li>
                    <a href="{{ l.url }}" title="{{ l.title }}">
                        {{ l.title }}
                    </a>
                </li>
                
            {% endfor %}
        </ul>

    </div>

    <div class="lower">
        <a href="/">
            {% render 'icon--globe' %}
        </a>
    </div>

</section>
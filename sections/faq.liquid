{{ 'component--faq.css' | asset_url | stylesheet_tag }}

<div style="min-height: 100vh">
  {% for block in section.blocks %}
  
    <details>
      <summary>
          <h2 class="accordion-title">{{ block.settings.faqtitle }}</h2>
      </summary>
      <span class="accordion-body">{{ block.settings.faqbody | newline_to_br }}</span>
    </details>
  
  {% endfor %}
</div>

  
  {% schema %}
      {
        "name": "Shipping FAQ",
        "tag": "section",
        "class": "section-faq",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "page-title",
            "label": "Page Title"
          }
        ],
        "max_blocks": 20,
        "blocks": [
           {
             "name": "FAQ",
             "type": "faq",
             "settings": [
               {
                 "type": "text",
                 "id": "faqtitle",
                 "label": "Question"
               },
               {
                 "type": "richtext",
                 "id": "faqbody",
                 "label": "Answer"
               }
             ]
           }
        ],
          "presets": [{
              "name": "Shipping FAQ",
              "category": "shipping",
              "blocks": [{
                  "type": "faq"
              }]
          }]
      }
  {% endschema %}